{
  "$schema-template": "1.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "default": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "docker.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "grocerymodel": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "$CONTAINER_REGISTRY_LOGIN_SERVER/grocerymodelquiet:0.0.1",
              "createOptions": {}
            }
          },
          "VideoProcessorModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.VideoProcessorModule.debug}",
              "createOptions": {}
            }
          },
          "CameraModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CameraModule.debug}",
              "createOptions": {}
            }
          },
          "ProcessorFPGA": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.ProcessorFPGA.debug}",
              "createOptions": {
                "ExposedPorts": {
                  "5678/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "5678/tcp": [
                      {
                        "HostPort": "5678"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "VideoProcessorModuleToIoTHub": "FROM /messages/modules/VideoProcessorModule/outputs/* INTO $upstream",
          "CameraModuleToIoTHub": "FROM /messages/modules/CameraModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "VideoProcessorModule": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "blobStorageSasUrl": "$BLOB_STORAGE_SAS_URL",
        "mlModelType": "$ML_MODEL_TYPE"
      }
    },
    "CameraModule": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "cameras": {
          "cam001": {
            "port": "counter",
            "id": "$CAMERA_ID_FIXED_IMAGE",
            "type": "simulator",
            "disabled": false
          },
          "cam002": {
            "port": "cycle-0",
            "id": "$CAMERA_ID_CYCLE_IMAGES",
            "type": "simulator",
            "disabled": false
          },
          "cam003": {
            "port": "MY_SERVER//700",
            "id": "real_camera",
            "type": "CameraServer",
            "disabled": true
          }
        }
      }
    }
  }
}