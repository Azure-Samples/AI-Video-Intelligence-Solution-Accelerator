{
  "$schema-template": "1.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "default": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "docker.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "grocerymodel": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "azureaivideo/grocerymodelquiet:0.0.1",
              "createOptions": {}
            }
          },
          "VideoProcessorModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.VideoProcessorModule}",
              "createOptions": {}
            }
          },
          "CameraModule": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CameraModule}",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "VideoProcessorModuleToIoTHub": "FROM /* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "VideoProcessorModule": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "blobStorageSasUrl": "$BLOB_STORAGE_SAS_URL",
        "mlModelType": "CPU"
      }
    },
    "CameraModule": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "cameras": {
          "cam001": {
            "port": "counter",
            "id": "$CAMERA_ID_FIXED_IMAGE",
            "type": "simulator",
            "secondsBetweenImages": 10.0,
            "disabled": false
          },
          "cam002": {
            "port": "cycle-0",
            "id": "$CAMERA_ID_CYCLE_IMAGES",
            "type": "simulator",
            "secondsBetweenImages": 10.0,
            "disabled": false
          },
          "cam003": {
            "port": "MY_SERVER//700",
            "id": "real_camera",
            "type": "CameraServer",
            "secondsBetweenImages": 10.0,
            "disabled": true
          },
          "cam004": {
            "port": "MY_SERVER//701",
            "id": "training_images_camera",
            "type": "CameraServer",
            "secondsBetweenImages": 1.0,
            "skipMLProcessing": true,
            "disabled": true
          }
        }
      }
    }
  }
}